# Raido - AI Pirate Radio Environment Configuration

# Database
POSTGRES_PASSWORD=your_secure_postgres_password_here
DATABASE_URL=postgresql://raido:${POSTGRES_PASSWORD}@db:5432/raido

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_TTS_VOICE=onyx
OPENAI_TTS_MODEL=tts-1

# Ollama Configuration (optional)
OLLAMA_BASE_URL=http://host.docker.internal:11434
OLLAMA_MODEL=llama3.1

# XTTS Configuration (optional)
# If using OpenTTS container below, default port is 5500
XTTS_BASE_URL=http://xtts-server:5500
# Voice name depends on engine; for OpenTTS with XTTS v2, examples include
# 'coqui-xtts-high', 'coqui-xtts-low'. Adjust in DJ Admin if needed.
XTTS_VOICE=coqui-xtts-high

# DJ Configuration
DJ_PROVIDER=openai
DJ_VOICE_PROVIDER=openai_tts
DJ_MAX_SECONDS=30
DJ_COMMENTARY_INTERVAL=1
DJ_TONE=energetic
DJ_PROFANITY_FILTER=true
STATION_NAME=Raido Pirate Radio

# Stream Configuration
ICECAST_PASSWORD=hackme
ICECAST_HOST=icecast
ICECAST_PORT=8000
LIQUIDSOAP_TELNET_PASSWORD=liquidsoap

# Security
JWT_SECRET=your-super-secret-jwt-signing-key-minimum-32-chars
SESSION_SECRET=your-session-secret-key-here
CORS_ORIGINS=http://localhost:3000,https://your-domain.com

# Application
APP_ENV=development
APP_DEBUG=true
LOG_LEVEL=info

# External Services
MUSICBRAINZ_USER_AGENT=Raido/1.0.0 (https://your-domain.com)
LASTFM_API_KEY=your-lastfm-api-key
SPOTIFY_CLIENT_ID=your-spotify-client-id
SPOTIFY_CLIENT_SECRET=your-spotify-client-secret

# File Paths
MUSIC_DIR=/music
SHARED_DIR=/shared
TTS_CACHE_DIR=/shared/tts
LOGS_DIR=/shared/logs

# Alerts (optional)
# If set, the in-stack monitor service will POST alerts to this Slack webhook when health checks fail.
ALERT_SLACK_WEBHOOK=
